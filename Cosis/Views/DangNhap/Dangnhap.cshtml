@model Cosis.Models.Entities.TaiKhoang
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Đăng nhập</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/assets/login.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/image/z3976797762973_b51498a7a233b1783fd5585aa063faaf.jpg" />
  </head>
  <body>    

    @if (TempData["ThongBaoDN"] != null)
    {
                <script type="text/javascript" charset="utf-8">
                    window.onload = function () {
                        alert("@Html.Raw(@TempData["ThongBaoDN"])");
                };
                </script>
    }
    <div class="banner">
      <img src="/assets/image/banner.jpg" alt="">
  </div>
    <div class="wrapper fadeInDown">
      <div id="formContent">
        <!-- Tabs Titles -->
        <div class="fadeIn first"></div>
        <h3>ĐĂNG NHẬP</h3>
        <label style="text-align:center;">Sử dụng thông tin tài khoản đã được cấp</label>
        <!-- Login Form -->
        <form method="post" action="/login" style="margin-top:10px">
          <div class="row">
                  <i class="bi bi-person-fill"></i>
                  <input style="text-align:left;"
                         type="text"
                         id="login"
                         class="fadeIn second"
                         asp-for="@Model.TaiKhoang1"
                         placeholder="Tài khoản" />
              </div>
              <div class="row">
                  <i class="bi bi-shield-lock-fill"></i>
                  <input style="text-align:left;"
                         type="password"
                         id="password"
                         class="fadeIn third"
                         asp-for="@Model.MatKhau"
                         placeholder="Mật khẩu" />
              </div>
          <input type="submit" class="fadeIn fourth" value="Đăng nhập" />
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter"></div>
      </div>
    </div>
     <footer class="footer">
      <label for="">
          <b>
              Phát triển bởi Trung tâm Tin học Thống kê khu vực II. 54A Nơ Trang
              Long, P.14, Bình Thạnh, TP.HCM. ĐT: (028) 35515433 - 33515438
          </b>
      </label>
  </footer>
  </body>
</html>
